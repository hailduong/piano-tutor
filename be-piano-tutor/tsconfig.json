{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "config.ts",
    "scripts/**/*.ts",
    "eslint.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/public"
  ]
}
